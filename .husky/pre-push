
# Fetch remote refs to ensure up-to-date info
git fetch

# Get current branch name
branch=$(git rev-parse --abbrev-ref HEAD)

# Check if remote branch exists
if git show-ref --verify --quiet refs/remotes/origin/$branch; then
  # Remote branch exists, check for commits to push
  range="origin/$branch..HEAD"
else
  # Remote branch does not exist, all commits are to be pushed
  range="HEAD"
fi

# Check if there are commits to push
if [ -z "$(git log $range)" ]; then
  echo -e "\033[44m\033[37m â›”  No commits to push. Skipping pre-push hook. â›” \033[0m"
  exit 0
fi

# If there are commits to push, run the commands
echo -e "\033[44m\033[37m ğŸ›‘  Stopping server running on port 3000 ğŸ›‘ \033[0m"
npx kill-port 3000
echo -e "\n"
echo -e "\033[44m\033[37m ğŸ§ª  Running unit tests ğŸ§ª \033[0m"
npm run coverage
echo -e "\n"
echo -e "\033[44m\033[37m ğŸ­  Preparing build ğŸ­ \033[0m"
npm run build
echo -e "\n"
echo -e "\033[44m\033[37m ğŸš€  Running build ğŸš€ \033[0m"
npm start & npx wait-on http://localhost:3000
echo -e "\n"
echo -e "\033[44m\033[37m ğŸš§  Validating HTML ğŸš§ \033[0m"
npm run validate-html
echo -e "\n"
echo -e "\033[44m\033[37m ğŸ—ï¸   Building lighthouse report ğŸ—ï¸  \033[0m"
npm run lighthouse
echo -e "\033[44m\033[37m ğŸ›‘  Stopping server running on port 3000 ğŸ›‘ \033[0m"
npx kill-port 3000

